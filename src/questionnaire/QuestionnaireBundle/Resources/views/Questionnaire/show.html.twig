{% include 'questionnaireQuestionnaireBundle:Layout:base.html.twig' %}

{% block body -%}
<div class="container">
 <div class="raw">
  <div class="col-md-8" style="color:#c12e2a"> 
    <h1><span class="label label-primary">{{ entity.name }}</span></h1>
  </div>
  <div class="col-md-2 text-right" style="margin-top:30px"> 
      <a class="btn btn-warning" href="{{ path('questionnaire') }}">
            Retour a la liste
        </a>
  </div>
  <div class="col-md-1 text-right" style="margin-top:30px"> 
      <a class="btn btn-info" href="{{ path('questionnaire_edit', { 'id': entity.id }) }}">
            Modifier
        </a>
  </div>
  <div class="col-md-1 text-right" style="margin-top:30px"> 
      {{ form(delete_form) }}
  </div>
         
 </div>     
 <div class="raw">
  <div class="col-md-12" >
  
    <table class="record_properties table table-responsive">
        <tbody>
            <tr class="success" >
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr >
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr class="info">
                <th>Welcomemessage</th>
                <td>{{ entity.welcomemessage }}</td>
            </tr>
            <tr>
                <th>Attachement</th>
                <td>{{ entity.attachement }}</td>
            </tr>
            <tr class="warning">
                <th>Isgenerated</th>
                <td>{{ entity.isgenerated }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr class="danger">
                <th>Confirmationsms</th>
                <td>{{ entity.confirmationsms }}</td>
            </tr>
            <tr>
                <th>Finalmessage</th>
                <td>{{ entity.finalmessage }}</td>
            </tr>
            
        </tbody>
    </table>

   
</div>
</div>
</div>
{% endblock %}
